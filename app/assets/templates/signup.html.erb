<div class = "alert alert-warning alert-dismissible" role="alert" > {{message}} </div>
<div class="container">
  <div class="row">
    <div class = "col-md-12">
      <div class="container login-container" id="formContainer">
        <h3 class="form-signin-heading">Sign In</h3>
        <a href="#" id="flipToRecover" class="flipLink">
          <div id="triangle-topright"></div>
        </a>
        <input type="text" class="form-control" name="user_email" id="loginEmail" placeholder="Email address" required autofocus ng-model="user.email">
        <br/>
        <input type="password" class="form-control" name="user_password" id="loginPass" placeholder="Password" required ng-model="user.password" >
        <br/>
        <input type="password" class="form-control" name="user_password_conf" id="loginPassConf" placeholder="Password Confirmation" required ng-model= "passwordCnf">
        <br/>
        <button class="btn btn-lg btn-primary btn-block" type="submit" ng-click="signup()">Sign in</button>
        Already Signup? <a href = "/">Click Here</a> to Login
      </div> <!-- /container -->
    </div>
  </div>
</div>

