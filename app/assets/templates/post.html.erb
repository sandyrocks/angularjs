<div class = container>
    <div class = "row">
        <div class = "col-md-12">
            <div class = "container post-container">
                <h3>List of Posts</h3>
                <table class="table table-hover table-bordered">
                  <tr>
                    <td>Id</td>
                    <td>Title</td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                <tr ng-repeat="post in posts[0]">
                  <td>{{post.id}}</td>
                  <td>{{post.title}}</td>
                  <td><a href = "#" ng-click="edit({{post.id}})" class = "btn btn-primary btn-success">Edit</a></td>
                  <td><a href = "#" ng-click="delete({{post.id}})" class = "btn btn-primary btn-danger">Delete</a></td>
                </tr>
                </table>
            </div>
        </div>
    </div>
</div>


