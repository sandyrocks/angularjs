<div class = container>
    <div class = "row">
        <div class = "col-md-12">
            <div class = "container post-container">
              <h3>Add New Post</h3>
                 New Title : <input type = "text" name = "post_title" class="form-control" ng-model = "post.new_title">
                 <br/>
                 <button class="btn btn-lg btn-primary btn-block" type="submit" ng-click="addPost()">Add Post</button>
              </div>
                <h3>List of Posts</h3>
                <table class="table table-hover table-bordered">
                  <tr>
                    <td>Id</td>
                    <td>Title</td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                <tr ng-repeat="post in posts[0]">
                  <td>{{$index + 1}}</td>
                  <td>{{post.title}}</td>
                  <td><a href="#" class = "btn btn-primary btn-success" ng-click="edit(post.id)">Edit</a></td>
                  <td><a href="#" class = "btn btn-primary btn-danger" ng-click="delete(post.id)">Delete</a></td>
                </tr>
                </table>
            </div>
        </div>
    </div>
</div>
